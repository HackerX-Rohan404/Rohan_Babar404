  const canvas = document.getElementById('stars');
  const ctx = canvas.getContext('2d');
  let w, h, stars=[];
  function resize(){ w = canvas.width = innerWidth; h = canvas.height = innerHeight; initStars(); }
  function initStars(){ stars = []; const count = Math.floor((w*h)/40000); for(let i=0;i<count;i++){ stars.push({x:Math.random()*w, y:Math.random()*h, r: Math.random()*1.3, vx:(Math.random()-0.5)*0.15, vy: (Math.random()-0.5)*0.15}) } }
  function frame(){ 
    ctx.clearRect(0,0,w,h); 
    for(let s of stars){ 
      s.x += s.vx; s.y += s.vy; 
      if(s.x<0) s.x=w; 
      if(s.x>w) s.x=0; 
      if(s.y<0) s.y=h; 
      if(s.y>h) s.y=0; 
      ctx.beginPath(); 
      ctx.fillStyle = "rgba(0,255,255,"+(0.3+Math.random()*0.7)+")"; 
      ctx.shadowColor = "rgba(0,255,255,0.8)";
      ctx.shadowBlur = 8;
      ctx.arc(s.x,s.y,s.r,0,Math.PI*2); 
      ctx.fill(); 
    } 
    requestAnimationFrame(frame); 
  }
  resize(); frame(); addEventListener('resize', resize);

  /* theme toggle persisted */
  const tt = document.getElementById('themeToggle');
  const body = document.body;
  const saved = localStorage.getItem('rb-theme') || 'dark';
  body.setAttribute('data-theme', saved);
  tt.textContent = saved==='dark' ? 'Light Theme' : 'Dark Theme';
  tt.setAttribute('aria-pressed', saved==='dark' ? 'false' : 'true');
  tt.addEventListener('click', () => {
    const current = body.getAttribute('data-theme') === 'dark' ? 'light' : 'dark';
    body.setAttribute('data-theme', current);
    localStorage.setItem('rb-theme', current);
    tt.textContent = current==='dark' ? 'Light Theme' : 'Dark Theme';
    tt.setAttribute('aria-pressed', current==='dark' ? 'false' : 'true');
  });

  /* mobile menu */
  const menuBtn = document.getElementById('menuBtn');
  const mobileMenu = document.getElementById('mobileMenu');
  menuBtn?.addEventListener('click', ()=> { 
    mobileMenu.classList.toggle('hidden'); 
    const expanded = menuBtn.getAttribute('aria-expanded') === 'true';
    menuBtn.setAttribute('aria-expanded', !expanded);
  });

  /* back to top */
  const backTop = document.getElementById('backTop');
  addEventListener('scroll', ()=> { 
    if(scrollY > 300){
      backTop.classList.add('show');
    } else {
      backTop.classList.remove('show');
    }
  });
  backTop.addEventListener('click', ()=> window.scrollTo({top:0,behavior:'smooth'}) );

  /* copy contact */
  const copyEmailBtn = document.getElementById('copyEmail');
  const copyPhoneBtn = document.getElementById('copyPhone');
  const telCopyBtn = document.getElementById('telCopy');
  copyEmailBtn?.addEventListener('click', async () => {
    try { 
      await navigator.clipboard.writeText('rohanbabar2010@gmail.com'); 
      copyEmailBtn.textContent = 'Copied ✓'; 
      setTimeout(()=> copyEmailBtn.innerHTML = '<i class="fas fa-envelope"></i> Copy Email 📋',1400); 
    } catch { 
      alert('Copy failed — use manual copy.'); 
    }
  });
  copyPhoneBtn?.addEventListener('click', async ()=> {
    try { 
      await navigator.clipboard.writeText('+91 9226901200'); 
      copyPhoneBtn.textContent = 'Copied ✓'; 
      setTimeout(()=> copyPhoneBtn.textContent = '+91 9226901200',1400); 
    } catch {}
  });
  telCopyBtn?.addEventListener('click', async ()=> {
    try { 
      await navigator.clipboard.writeText('+91 9226901200'); 
      telCopyBtn.textContent = 'Copied ✓'; 
      setTimeout(()=> telCopyBtn.textContent = '+91 9226901200',1400); 
    } catch {}
  });

  /* resume download (placeholder) */
  const resumeBtn = document.getElementById('downloadResume');
  resumeBtn?.addEventListener('click', (e)=> {
    e.preventDefault();
    const content = `Rohan Babar — Resume\nAspiring Certified Ethical Hacker\nContact: rohanbabar2010@gmail.com\nPhone: +91 9226901200\n\nSummary:\n- 11th Science student, cybersecurity enthusiast...\n\nSkills:\n- Python, Linux, Networking, Ethical Hacking\n\nProjects:\n- Network Scanner, Password Strength Checker, Ethical Hacking Blog\n\nCertifications:\n- CEH (in progress), White Hat Hacker, CompTIA Security+`;
    const blob = new Blob([content], {type:'text/plain'});
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url; a.download = 'Rohan_Babar_Resume.txt'; document.body.appendChild(a); a.click();
    URL.revokeObjectURL(url); a.remove();
  });

  /* contact form with mailto fallback */
  const form = document.getElementById('contactForm');
  const formStatus = document.getElementById('formStatus');
  form?.addEventListener('submit', (e)=> {
    e.preventDefault();
    const name = (document.getElementById('cname')||{}).value?.trim();
    const email = (document.getElementById('cemail')||{}).value?.trim();
    const msg = (document.getElementById('cmsg')||{}).value?.trim();
    if(!name || !email || !msg){ 
      formStatus.textContent = 'Please complete all fields.';
      formStatus.classList.add('text-red-500');
      return; 
    }
    formStatus.textContent = 'Opening mail client...';
    formStatus.classList.remove('text-red-500');
    const subject = encodeURIComponent(`Website contact from ${name}`);
    const body = encodeURIComponent(`Name: ${name}\nEmail: ${email}\n\n${msg}`);
    window.location.href = `mailto:rohanbabar2010@gmail.com?subject=${subject}&body=${body}`;
  });
  document.getElementById('mailtoBtn')?.addEventListener('click', ()=> {
    window.location.href = 'mailto:rohanbabar2010@gmail.com?subject=Contact';
  });

  /* safe terminal demo */
  const term = document.getElementById('terminal');
  const termInput = document.getElementById('termInput');
  const termRun = document.getElementById('termRun');
  function printTerminal(text, isCode = false){
    const x = document.createElement('div');
    if(isCode){
      x.innerHTML = '<code class="text-white/90" style="word-break: break-word; overflow-wrap: break-word;">'+text+'</code>';
    } else {
      x.innerHTML = '<span class="muted text-xs select-text">›</span> '+ text;
    }
    term.appendChild(x);
    term.scrollTop = term.scrollHeight;
  }
  termRun?.addEventListener('click', ()=> {
    const v = termInput.value.trim().toLowerCase();
    if(!v) return;
    printTerminal(v, true);
    if(v === 'help'){ 
      printTerminal('Available commands: help, about, scan-demo, clear'); 
    }
    else if(v === 'about'){ 
      printTerminal('Rohan — 11th Science student, learning defense-first security.'); 
    }
    else if(v === 'scan-demo'){ 
      printTerminal('Simulating network scan (demo only): Found 3 hosts — 192.168.1.2, 192.168.1.5, 192.168.1.9'); 
    }
    else if(v === 'clear'){ 
      term.innerHTML = ''; 
      printTerminal('Terminal cleared.'); 
    }
    else { 
      printTerminal('Command not recognized. Try help.'); 
    }
    termInput.value = '';
  });
  termInput?.addEventListener('keydown', (e)=> { if(e.key==='Enter'){ termRun.click(); } });

  /* projects modal */
  const modal = document.getElementById('projectModal');
  const modalTitle = document.getElementById('modalTitle');
  const modalBody = document.getElementById('modalBody');
  const modalClose = document.getElementById('modalClose');
  document.querySelectorAll('[data-project]').forEach(btn => btn.addEventListener('click', ()=> {
    const id = btn.getAttribute('data-project');
    modal.classList.remove('hidden'); 
    document.body.style.overflow='hidden';
    modalClose.focus();
    if(id === 'scanner'){
      modalTitle.textContent = 'Network Scanner — Safe Demo';
      modalBody.innerHTML = `<p class="muted break-words">This demo shows sample output of a network enumeration script (educational only). Real scanning tools should only be used on networks you own or have permission to test.</p>
      <pre class="mt-3 terminal break-words" tabindex="0" aria-label="Network Scanner demo output">nmap -sV 192.168.1.0/24
PORT   STATE SERVICE     VERSION
22/tcp open  ssh         OpenSSH 7.9
80/tcp open  http        nginx 1.18
443/tcp open  https      nginx 1.18</pre>`;
    } else if(id === 'password'){
      modalTitle.textContent = 'Password Strength Checker';
      modalBody.innerHTML = `<p class="muted break-words">Checks length, common patterns, and entropy. Use long, unique phrases and a password manager.</p>`;
    } else {
      modalTitle.textContent = 'Ethical Hacking Blog';
      modalBody.innerHTML = `<p class="muted break-words">A collection of beginner-friendly tutorials about security fundamentals, safe tools and defensive techniques.</p>`;
    }
  }));
  modalClose?.addEventListener('click', ()=> { 
    modal.classList.add('hidden'); 
    document.body.style.overflow=''; 
  });
  window.addEventListener('keydown', (e)=> { 
    if(e.key==='Escape' && !modal.classList.contains('hidden')){
      modal.classList.add('hidden'); 
      document.body.style.overflow=''; 
    } 
  });

  /* project modal demo action */
  document.getElementById('modalAction')?.addEventListener('click', ()=> { 
    window.location.hash = '#contact'; 
    modal.classList.add('hidden'); 
    document.body.style.overflow=''; 
  });

})();
  </script>
